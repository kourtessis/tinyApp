<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <div style="float:right; right: 30px; position: absolute">
          <% if(username){%>
            <div>
              <form action="/logout" method="post" name="LoginForm">
                <span>Logged in as: <%= username %> </span>
                <input type="submit" value="Logout">
              </form>
            </div>
            <%} else {%>
              <form action="/login" method="post" name="LoginForm">
                <label for="username">
                  <!-- font awesome icon -->
                  <i class="fas fa-user"></i>
                </label>
                <i class="fas fa-lock"></i>
                </label>
                <input type="text" name="username" placeholder="username" id="text" required>
                <input type="submit" value="Login">
              </form>
              <%}%>
        </div>
      </div>
    </div>
  </nav>
</header>